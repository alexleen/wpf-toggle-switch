<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfToggleSwitch="clr-namespace:WpfToggleSwitch;assembly=WpfToggleSwitch"
        Title="MainWindow" 
        Height="350" 
        Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Circular:</Label>
            <WpfToggleSwitch:CircularToggleSwitch Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding On}"/>
        </StackPanel>
        <WpfToggleSwitch:CircularToggleSwitchSideLabel Width="70" HorizontalAlignment="Center"/>
        <WpfToggleSwitch:RectangularToggleSwitch Width="60" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
